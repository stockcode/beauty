<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_icon_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/user_icon_default_main"
            />
    <LinearLayout android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/userName_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/theme_color"
            android:text = "userName"
            />
        <TextView
                android:id="@+id/comment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_below="@+id/userName_comment"
                android:textColor="#DCDCDC"
                android:text = "刚刚"
                />
        <TextView
            android:id="@+id/index_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "1楼"
            android:gravity="center"
            android:textColor="#888888"
            android:layout_marginRight="4dp"
            android:layout_alignParentRight="true"
			android:background="@drawable/bg_comment_floor"
            />
    </RelativeLayout>
	<TextView
            android:id="@+id/content_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:text = "评论"
            android:textSize="16sp"
            android:textColor="#666666"
            />
    <TextView
            android:id="@+id/reply_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:padding="5dip"
            android:visibility="gone"
            android:background="#DCDCDC"
            android:textSize="16sp"
            android:textColor="#666666"
            />
    </LinearLayout>
</LinearLayout>