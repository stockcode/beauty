<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    
    >
    <RelativeLayout 
        android:id="@+id/user_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_settings_item_down"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        >
        <TextView 
            android:id="@+id/user_icon_tips"
            style="@style/tipstheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="头像"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_icon_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/user_icon_default_main"
            />
    </RelativeLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="#eeeeee"
	    />
	<RelativeLayout 
	    android:id="@+id/user_nick"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
        android:background="@drawable/selector_settings_item_down"
	    android:paddingBottom="8dp"
        android:paddingTop="8dp"
	    >
	    <TextView 
            android:id="@+id/user_nick_tips"
            style="@style/tipstheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:text="昵称"
            />
	    <TextView 
            android:id="@+id/user_nick_text"
            style="@style/tipstheme_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:text="点击登录"
            />
	</RelativeLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="#eeeeee"
	    />
	
	<RelativeLayout 
        android:id="@+id/sex_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        >
        <TextView 
            android:id="@+id/sex_choice_tips"
            style="@style/tipstheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:text="性别"
            />
        <CheckBox 
            android:id="@+id/sex_choice_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:button="@drawable/selector_sex_choice"
            android:checked="true"
            android:scaleType="centerInside"
            />
    </RelativeLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="#eeeeee"
	    />
	
	
	<RelativeLayout 
	    android:id="@+id/user_sign"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
        android:background="@drawable/selector_settings_item_down"
	    android:paddingBottom="8dp"
        android:paddingTop="8dp"
	    >
	    <TextView 
            android:id="@+id/user_sign_tips"
            style="@style/tipstheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:text="个性签名"
            />
	    <TextView 
            android:id="@+id/user_sign_text"
            style="@style/tipstheme_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/user_sign_tips"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:text="点击填写"
            />
	</RelativeLayout>
	<View 
	    android:layout_width="match_parent"
        android:layout_height="1dp"
	    android:layout_marginTop="20dp"
	    android:background="#eeeeee"
	    />

    <RelativeLayout
        android:id="@+id/resetPasswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_settings_item_down"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <TextView
            style="@style/tipstheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="修改密码" />
    </RelativeLayout>

    <View
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="#eeeeee"
	    />
	<RelativeLayout 
        android:id="@+id/settings_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_settings_item_down"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        >
        <TextView 
            android:id="@+id/tvPay"
            style="@style/tipstheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="购买服务"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eeeeee" />

    <TextView 
        android:id="@+id/user_logout"
        style="@style/tipstheme_buttontext"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/selector_logout"
        android:gravity="center"
        android:paddingBottom="12dip"
        android:paddingTop="12dip"
        android:text="退出登录"
        />
</LinearLayout>
</ScrollView>
